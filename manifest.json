{
  "manifest_version": 2,

  "name": "PointRoll PageBuddy",
  "description": "This extension provides information on PointRoll ads.",
  "version": "0.9",
  
  "devtools_page": "devtools.html",
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["v1.js", "jquery-2.1.1.min.js"]
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
	   "persistent": true
  },
  
  "browser_action": {
    "default_title": "Test",
    "default_popup": "popup.html"
  },
  
  "icons": { "16": "icon16.PNG",
           "48": "icon48.PNG",
          "128": "icon128.PNG" },
  
  "permissions": [
	"activeTab",
	"storage",
  "<all_urls>",
  "webRequest",
  "webRequestBlocking",
  "tabs"
  ]
}
