{
  "manifest_version": 2,

  "name": "PointRoll PageBoy",
  "description": "This extension provides information on PointRoll ads.",
  "version": "0.9",

   "background": {
   "persistent": false,
   "scripts": ["background.js"]
    },
  
  "browser_action": {
    "default_icon": "icon.PNG",
    "default_popup": "popup.html"
  },
  
   "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js":      ["content.js"]
    }],
  "permissions": [
    "https://*/*",
	"http://*/*",
	"activeTab"
  ]
}
